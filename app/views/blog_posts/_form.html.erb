<%=form_with model: blog_post do |form| %>
<div>
  <%= form.label :title %>
  <%= form.text_field :title %>

</div>

<div>
  <%= form.label :content %>
  <%= form.rich_text_area :content, size: "60x10" %>
</div>

<div>
  <%= form.label :published_at %>
  <%= form.datetime_select :published_at, include_blank: true %>
</div>

<%= form.submit %>
<%end%>
