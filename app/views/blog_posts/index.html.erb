<div class="bg-white py-24 sm:py-2">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      <% @blog_posts.each_with_index do |post| %>
        <article class="flex max-w-xl flex-col items-start justify-between">
          <div class="flex items-center gap-x-4 text-xs">
            <time datetime="2020-03-16" class="text-gray-500">Mar 16, 2020</time>
            <% if post.draft?%>
            <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">Draft</a>
            <%elsif post.scheduled?%>
            <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">Scheduled</a>
            <%else%>
            <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">Published</a>
            <% end %>
          </div>
          <div class="group relative">
            <%= image_tag post.cover_image, sizes: "100vw" if post.cover_image.attached? %>
            <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
              <a href= <%= "/blog_posts/#{post.id}" %> >
                <span class="absolute inset-0"></span>
                <%= post.title %>
              </a>
            </h3>
            <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600"><%= post.content %></p>
          </div>
          <div class="relative mt-8 flex items-center gap-x-4">
            <img src="https://avatars.githubusercontent.com/u/54086780?v=4" alt="" class="h-10 w-10 rounded-full bg-gray-50">
            <div class="text-sm leading-6">
              <p class="font-semibold text-gray-900">
                <a href="#">
                  <span class="absolute inset-0"></span>
                  Yesim Dundar
                </a>
              </p>
              <p class="text-gray-600">Badass / CTO</p>
            </div>
          </div>
        </article>
      <%end%>
    </div>
    <div class="grid justify-items-center px-4 py-3 sm:px-6">
      <%# Render a view helper in your views (skipping nav links for empty pages) %>
      <%if @pagy.count > @pagy.items%>
      <%== pagy_nav(@pagy) if @pagy.pages > 1%>
      <%end%>
    </div>

  </div>
